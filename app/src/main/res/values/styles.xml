<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="material_button_style" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">@dimen/material_padding</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="material_text_input_layout_style" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="login_text_style" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
</resources>